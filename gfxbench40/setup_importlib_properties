set_property(GLOBAL APPEND PROPERTY TEST_LIBRARIES "${target_name}")
if(PLUGINS_DIR_DEBUG OR PLUGINS_DIR_RELEASE)
	if(WIN32)
		set_target_properties(${target_name} PROPERTIES RUNTIME_OUTPUT_DIRECTORY_DEBUG ${PLUGINS_DIR_DEBUG}/plugins)
		set_target_properties(${target_name} PROPERTIES RUNTIME_OUTPUT_DIRECTORY_RELEASE ${PLUGINS_DIR_RELEASE}/plugins)
	endif()

	if(UNIX AND NOT ANDROID AND NOT ${CMAKE_SYSTEM_NAME} MATCHES "Darwin")
		set_target_properties(${target_name} PROPERTIES LIBRARY_OUTPUT_DIRECTORY_DEBUG ${PLUGINS_DIR_DEBUG}/plugins)
		set_target_properties(${target_name} PROPERTIES LIBRARY_OUTPUT_DIRECTORY_RELEASE ${PLUGINS_DIR_RELEASE}/plugins)
	elseif(APPLE)
		set_target_properties(${target_name} PROPERTIES LIBRARY_OUTPUT_DIRECTORY_DEBUG ${PLUGINS_DIR_DEBUG}/plugins)
		set_target_properties(${target_name} PROPERTIES LIBRARY_OUTPUT_DIRECTORY_RELEASE ${PLUGINS_DIR_RELEASE}/plugins)
	endif()
endif()
