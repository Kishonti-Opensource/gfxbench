<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="net.kishonti.testfw.app"
      android:versionCode="1"
      android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-feature android:glEsVersion="0x00020000" android:required="true" />
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-feature android:name="android.hardware.camera" />
    <uses-permission android:name="android.permission.WRITE_USER_DICTIONARY"/>

    <application android:label="@string/app_name"
        android:icon="@drawable/ic_launcher"
        android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
        android:allowBackup="false"
        android:name="net.kishonti.testfw.app.TestApplication" >

        <meta-data android:name="com.samsung.android.vr.application.mode" android:value="vr_only" />  

        <activity android:name="MainActivity"
                  android:label="@string/app_name"
                  android:screenOrientation="landscape"
                  android:configChanges="screenSize|orientation|keyboardHidden|keyboard"
                  android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="net.kishonti.testfw.TfwActivity" 
                  android:screenOrientation="landscape" 
                  android:exported="true"
                  android:configChanges="screenSize|orientation|keyboardHidden|keyboard"/>

        <activity android:name="net.kishonti.testfw.CrashHandler" android:process=":crasher" />
        <service android:name="net.kishonti.testfw.app.TfwService" android:exported="true" />
        <receiver android:name="net.kishonti.testfw.app.FileResultSaver" android:exported="false">
            <intent-filter>
                <action android:name="net.kishonti.testfw.ACTION_TFW_RESULT"/>
                <!-- category value must match the package name. see TfwActivity#finishWithResult -->
                <category android:name="net.kishonti.testfw.app"/>
            </intent-filter>
        </receiver>
    </application>
</manifest>
