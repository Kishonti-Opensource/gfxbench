<?xml version="1.0" encoding="utf-8"?>
<Package xmlns="http://schemas.microsoft.com/appx/2010/manifest" xmlns:m2="http://schemas.microsoft.com/appx/2013/manifest" xmlns:m3="http://schemas.microsoft.com/appx/2014/manifest" xmlns:mp="http://schemas.microsoft.com/appx/2014/phone/manifest">
  <Identity Name="@IDENTITY_NAME@" Publisher="@PUBLISHER_NAME@" Version="@PACKAGE_VERSION@" />
  <mp:PhoneIdentity PhoneProductId="@PACKAGE_GUID@" PhonePublisherId="00000000-0000-0000-0000-000000000000"/>

  <Properties>
    <DisplayName>@SHORT_NAME@</DisplayName>
    <PublisherDisplayName>Kishonti Kft.</PublisherDisplayName>
    <Logo>Assets\Icon\StoreLogo.png</Logo>
  </Properties>
  <Prerequisites>
    <OSMinVersion>6.3.1</OSMinVersion>
    <OSMaxVersionTested>6.3.1</OSMaxVersionTested>
  </Prerequisites>
  <Resources>
    <Resource Language="x-generate" />
  </Resources>

  <Applications>
    <Application Id="App" Executable="$targetnametoken$.exe" EntryPoint="WindowsPhoneApp.App">
      <m3:VisualElements
        DisplayName="@SHORT_NAME@"
        Description="@SHORT_NAME@"
		    Square150x150Logo="Assets\Icon\Logo.png"
        Square44x44Logo="Assets\Icon\SmallLogo.png"
        ForegroundText="light"
		    BackgroundColor="transparent">

        <m3:DefaultTile
          Wide310x150Logo="Assets\Icon\WideLogo.png"
          Square71x71Logo="Assets\Icon\Square71x71Logo.png"/>
        </m3:DefaultTile>

        <m3:SplashScreen Image="Assets\Icon\SplashScreen.png"/>
      </m3:VisualElements>
    </Application>
  </Applications>

  <Capabilities>
    <Capability Name="internetClientServer" />
    <Capability Name="removableStorage" />
  </Capabilities>
</Package>
