<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/settings_registerBack"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingLeft="20dp"
	android:paddingRight="20dp" >
		
    <LinearLayout 
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">
	
		<TextView
			android:id="@+id/register_mainText"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/view_margin"
			android:layout_marginTop="@dimen/view_margin"
			android:text="Please fill the form below"
			android:textColor="@color/text_main" />
	
		<EditText
			android:id="@+id/register_name"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/view_margin"
			android:layout_marginTop="@dimen/view_margin"
			android:ems="10"
			android:padding="5dp"
			android:inputType="textNoSuggestions|textVisiblePassword"
			android:singleLine="true"
			android:textColorHint="@color/edittext_hintcolorstates"
			android:textSize="14sp"
			android:textCursorDrawable="@null" />
	
		<EditText
			android:id="@+id/register_password"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/view_margin"
			android:layout_marginTop="@dimen/view_margin"
			android:ems="10"
			android:padding="5dp"
			android:hint="Password"
			android:inputType="textPassword"
			android:singleLine="true"
			android:textColorHint="@color/edittext_hintcolorstates"
			android:textSize="14sp"
			android:textCursorDrawable="@null" />
	
		<EditText
			android:id="@+id/register_repassword"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/view_margin"
			android:layout_marginTop="@dimen/view_margin"
			android:ems="10"
			android:padding="5dp"
			android:hint="Retype password"
			android:inputType="textPassword"
			android:textColorHint="@color/edittext_hintcolorstates"
			android:textSize="14sp"
			android:textCursorDrawable="@null" />
	
		<EditText
			android:id="@+id/register_email"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/view_margin"
			android:layout_marginTop="@dimen/view_margin"
			android:ems="10"
			android:padding="5dp"
			android:hint="E-mail address"
			android:inputType="textNoSuggestions|textEmailAddress"
			android:singleLine="true"
			android:textColorHint="@color/edittext_hintcolorstates"
			android:textSize="14sp"
			android:textCursorDrawable="@null" />
	
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/view_margin"
			android:layout_marginTop="@dimen/view_margin">
	
			<Button
				android:id="@+id/register_dummyBtn"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="0.5"
				android:visibility="invisible" />
	
			<Button
				android:id="@+id/register_registerBtn"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_gravity="right"
				android:layout_weight="0.5"
				android:text="Register" />
		</LinearLayout>
	
	</LinearLayout>
</ScrollView>
