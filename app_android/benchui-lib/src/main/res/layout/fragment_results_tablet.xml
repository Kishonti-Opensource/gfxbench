<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:tag="xlarge" >
	
    <LinearLayout
	    android:id="@+id/results_navbarBack"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:baselineAligned="false" >
	    
	    <include
		    android:id="@+id/results_navbar"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight="2"
		    layout="@layout/layout_navbar" />
	    
	    <RelativeLayout
		    android:id="@+id/results_navbar_extraBack"
		    android:paddingLeft="1dp"
		    android:layout_width="0dp"
		    android:layout_height="50dp"
		    android:layout_weight="1"
			android:background="@color/header_background" >
			
	        <View
				android:layout_width="1dp"
				android:layout_height="match_parent"
				android:background="@color/list_separator" />
		    
	        <Button
				android:id="@+id/results_navbar_extraRightButton"
			    android:layout_width="70dp"
			    android:layout_height="50dp"
			    android:layout_alignParentRight="true"
			    android:background="@drawable/button_header"
			    android:gravity="center"
			    android:singleLine="true"
			    android:text="@string/hello_world"
			    android:textColor="@android:color/white"
			    android:textSize="16sp" />
	        
	        <Button
				android:id="@+id/results_navbar_extraLeftButton"
			    android:layout_width="70dp"
			    android:layout_height="50dp"
			    android:background="@drawable/button_header"
			    android:layout_alignParentLeft="true"
			    android:visibility="invisible"
			    android:gravity="center"
			    android:singleLine="true"
			    android:text="@string/hello_world"
			    android:textColor="@android:color/white"
			    android:textSize="16sp" />
	    	
	    	<TextView
		    	android:id="@+id/results_navbar_extraTitle"
		    	android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	android:layout_toLeftOf="@id/results_navbar_extraRightButton"
		    	android:layout_toRightOf="@id/results_navbar_extraLeftButton"
		    	android:layout_centerVertical="true"
				android:gravity="center"
				android:singleLine="true"
				android:text="@string/hello_world"
				android:textColor="@android:color/white"
				android:textSize="16sp"
				android:textStyle="bold" />
	        
	    </RelativeLayout>
        
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/results_listBack"
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:layout_below="@+id/results_navbarBack"
	    android:orientation="horizontal" >
	    
        <ListView
            android:id="@+id/results_historyList"
            android:layout_width="200dp"
            android:layout_height="match_parent"
			android:divider="@color/list_separator"
			android:dividerHeight="1dp"
			android:drawSelectorOnTop="true"
			android:listSelector="@drawable/theme_list_selector" >
        </ListView>
        
        <View
			android:layout_width="1dp"
			android:layout_height="match_parent"
			android:background="@color/list_separator" />
        
        <net.kishonti.theme.ThemeListView
            android:id="@+id/results_testList"
            android:layout_width="400dp"
            android:layout_height="match_parent"
			android:divider="@color/list_separator"
			android:dividerHeight="1dp"
			android:drawSelectorOnTop="true"
			android:listSelector="@drawable/theme_list_selector" 
		/>
        
        <View
			android:layout_width="1dp"
			android:layout_height="match_parent"
			android:background="@color/list_separator" />
        
        <LinearLayout
		        android:id="@+id/results_infoBack"
		        android:layout_width="200dp"
		        android:layout_height="match_parent"
		        android:padding="5dp"
		        android:orientation="vertical" >

            <ImageView
                android:id="@+id/results_infoImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/dummy_loading"
                android:contentDescription="@string/hello_world" />

            <ScrollView 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp" >
                
                <TextView
                android:id="@+id/results_infoText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hello_world" />
                
            </ScrollView>
        </LinearLayout>
        
    </LinearLayout>

</RelativeLayout>