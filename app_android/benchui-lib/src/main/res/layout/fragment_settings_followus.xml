<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/settings_followusBack"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	
    <LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingLeft="20dp"
		android:paddingRight="20dp" 
		android:orientation="vertical">
	
		<ImageView
		    android:id="@+id/followus_logo"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:adjustViewBounds="true"
			android:padding="20dp"
		    android:src="@drawable/app_logo" />
	
		<TextView
			android:id="@+id/followus_info"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingTop="10dp"
			android:textColor="@color/text_main" />
	
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingTop="35dp"
			android:layout_gravity="center_horizontal"
			android:weightSum="3">
	
			<ImageButton
				android:id="@+id/followus_twitter"
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:layout_weight="1"
				android:adjustViewBounds="true"
				android:background="@android:color/transparent"
				android:scaleType="centerInside"
				android:src="@drawable/twitter_icon" />
	
			<ImageButton
				android:id="@+id/followus_youtube"
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:layout_weight="1"
				android:background="@android:color/transparent"
				android:scaleType="centerInside"
				android:src="@drawable/youtube_icon" />
	
			<ImageButton
				android:id="@+id/followus_linkedin"
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:layout_weight="1"
				android:background="@android:color/transparent"
				android:scaleType="centerInside"
				android:src="@drawable/linkedin_icon" />
		</LinearLayout>
	
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingTop="25dp"
			android:weightSum="3">
	
			<ImageButton
				android:id="@+id/followus_vimeo"
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:layout_weight="1"
				android:adjustViewBounds="true"
				android:background="@android:color/transparent"
				android:scaleType="centerInside"
				android:src="@drawable/vimeo_icon" />
	
			<ImageButton
				android:id="@+id/followus_facebook"
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:layout_weight="1"
				android:adjustViewBounds="true"
				android:background="@android:color/transparent"
				android:scaleType="centerInside"
				android:src="@drawable/facebook_icon" />
	
			<ImageButton
				android:id="@+id/followus_googleplus"
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:layout_weight="1"
				android:adjustViewBounds="true"
				android:background="@android:color/transparent"
				android:scaleType="centerInside"
				android:src="@drawable/gplus_icon" />
		</LinearLayout>
	
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingTop="35dp"
			android:orientation="vertical">
	
			<Button
				android:id="@+id/followus_website"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:text="@string/app_website_title" />
	
			<Button
				android:id="@+id/followus_kishonti"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginTop="10dp"
				android:text="@string/kishontiWebsiteTitle" />
	
			<Button
				android:id="@+id/followus_contactUs"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginTop="10dp" />
		</LinearLayout>
	
		<ImageView
			android:id="@+id/followus_logo2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="right"
			android:paddingTop="20dp"
			android:paddingBottom="20dp"
			android:src="@drawable/kishonti" />
	</LinearLayout>
    
</ScrollView>
