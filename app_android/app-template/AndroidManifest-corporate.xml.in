<?xml version="1.0"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" android:versionCode="@VERSION_CODE@" android:versionName="@PRODUCT_VERSION@">
  <uses-permission android:name="android.permission.BATTERY_STATS" tools:ignore="ProtectedPermissions"/>
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
  <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
  <uses-permission android:name="android.permission.CAMERA"/>
  <uses-permission android:name="android.permission.WRITE_SETTINGS"/>

  <uses-feature android:name="android.software.leanback" android:required="false" />
  <uses-feature android:name="android.hardware.touchscreen" android:required="false" />
  <uses-feature android:name="android.hardware.camera" android:required="false"/>
  <uses-feature android:name="android.hardware.camera.autofocus" android:required="false"/>
  <uses-feature android:glEsVersion="@REQUIRED_GLES_VERSION@" android:required="true"/>

  <application android:name="net.kishonti.app.App"
               android:allowBackup="true"
               android:icon="@drawable/app_icon"
               android:banner="@drawable/app_banner"
               android:label="@string/app_name"
               android:theme="@style/AppTheme"
               android:largeHeap="true" tools:ignore="Instantiatable">
    <activity android:name="net.kishonti.app.MainActivity" android:exported="true" android:launchMode="singleTop">
      <intent-filter>
        <action android:name="net.kishonti.benchui.ACTION_SHOW_RESULT"/>
        <category android:name="android.intent.category.DEFAULT"/>
        <category android:name="@PACKAGE_NAME@"/>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
        <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
      </intent-filter>
    </activity>
    <activity android:name="net.kishonti.benchui.BatteryActivity" android:screenOrientation="behind" android:windowSoftInputMode="stateAlwaysHidden"/>
    <activity android:name="net.kishonti.benchui.BenchTestActivity" android:configChanges="screenSize|orientation|keyboardHidden|uiMode" android:exported="false" android:screenOrientation="landscape" android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" android:windowSoftInputMode="stateAlwaysHidden"/>
    <activity android:name="net.kishonti.benchui.CompositeActivity" android:configChanges="screenSize|orientation|keyboardHidden|uiMode" android:exported="false" android:screenOrientation="landscape" android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" android:windowSoftInputMode="stateAlwaysHidden"/>
    <activity android:name="net.kishonti.benchui.initialization.InitActivity" android:screenOrientation="nosensor"  android:configChanges="screenSize|orientation|keyboardHidden|uiMode"/>
    <receiver android:name="net.kishonti.benchui.TestSession" android:exported="false">
      <intent-filter>
        <action android:name="net.kishonti.testfw.ACTION_TFW_RESULT"/>
        <category android:name="@PACKAGE_NAME@"/>
      </intent-filter>
    </receiver>
    <receiver android:name="net.kishonti.benchui.corporate.CommandLineSession" android:exported="true">
      <intent-filter>
        <action android:name="net.kishonti.testfw.ACTION_RUN_TESTS"/>
        <category android:name="@PACKAGE_NAME@"/>
      </intent-filter>
    </receiver>
  </application>
</manifest>
